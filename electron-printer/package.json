{
  "name": "impressora-pedidos",
  "version": "1.0.0",
  "description": "Aplicativo de impressão automática de pedidos",
  "main": "src/main.js",
  "author": "Seu Restaurante",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "rebuild": "electron-rebuild -f -w usb"
  },
  "build": {
    "appId": "com.restaurante.impressora",
    "productName": "Impressora de Pedidos",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "extraResources": [
      {
        "from": "node_modules/usb",
        "to": "usb",
        "filter": ["**/*"]
      }
    ]
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.90.1",
    "electron-store": "^8.1.0",
    "usb": "^2.11.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9"
  },
  "optionalDependencies": {
    "usb": "^2.11.0"
  }
}
